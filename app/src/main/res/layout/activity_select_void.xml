<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Main Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Product Selection Area -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="2"
            android:padding="4dp"
            android:rowCount="3">

            <!-- Example Products -->
            <Button
                android:id="@+id/product1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="#2196F3"
                android:text="Product 1"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/product2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9800"
                android:text="Product 2"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/product3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="#9C27B0"
                android:text="Product 3"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/product4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="#F44336"
                android:text="Product 4"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/product5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Product 5"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </GridLayout>

        <!-- Enlarged Right Panel -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="#424242"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="162dp"
                android:layout_height="632dp"
                android:text="TOTAL: â‚¬0.00"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:layout_marginBottom="16dp"
                android:padding="10dp" />

            <!-- Confirm Void Button -->

        </LinearLayout>
    </LinearLayout>

    <!-- Back Button at the bottom -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
