<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left side: GridLayout for dynamically added buttons -->
        <GridLayout
            android:id="@+id/grid_layout_buttons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="2"
            android:padding="4dp"
            android:rowCount="3"/>

        <!-- Right side: Panel with total and other content -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="#424242"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="184dp"
                android:layout_height="627dp"
                android:padding="10dp"
                android:text="TOTAL: â‚¬0.00"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Additional content for the right panel can be added here -->

        </LinearLayout>
    </LinearLayout>

    <!-- Back Button at the bottom -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
