            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#FF4081"
            android:padding="16dp"
            android:text="Chicken Pie - €2.20"
            android:textColor="#FFFFFF"
