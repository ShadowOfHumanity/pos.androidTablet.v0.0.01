<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Numeric Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edit_amount_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Payment Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:padding="4dp"
        android:rowCount="2">

        <Button
            android:id="@+id/btn_1eur"
            android:layout_width="0dp"
            android:layout_height="99dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="1€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_2eur"
            android:layout_width="0dp"
            android:layout_height="99dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="2€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_5eur"
            android:layout_width="0dp"
            android:layout_height="99dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="5€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_10eur"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="10€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_20eur"
            android:layout_width="0dp"
            android:layout_height="107dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="20€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_50eur"
            android:layout_width="0dp"
            android:layout_height="99dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#4CAF50"
            android:text="50€"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />
    </GridLayout>

    <!-- Card Payment Button -->
    <Button
        android:id="@+id/btn_card_payment"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:text="Pay by Card"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Total Amount Text -->
    <TextView
        android:id="@+id/text_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Total Amount: €0.00"
        android:textColor="#000000"
        android:textSize="40sp"
        android:background="#BDBDBD" />

    <!-- Change to Give Text -->
    <TextView
        android:id="@+id/text_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change to Give: €0.00"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#BDBDBD"/>

    <!-- Back Button at the bottom -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
